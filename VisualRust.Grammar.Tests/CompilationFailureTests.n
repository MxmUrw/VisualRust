using Nemerle;
using Nemerle.Collections;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using System.Collections.Generic;
using System.Linq;
using System.IO;

using MSTestHacks;
using Microsoft.VisualStudio.TestTools.UnitTesting;

using VisualRust.Grammar;

using Nitra.Declarations;
using Nitra.ProjectSystem;

namespace VisualRust.Grammar.Tests
{
    [TestClass]
    public class CompilationFailureTests : TestBase
    {        
        [TestMethod]
        [DataSource("VisualRust.Grammar.Tests.CompilationFailureTests.allFiles")]
        public TestCompilationFailure() : void
        {
            def file = Parser.ParseFileWithExtendedStack(TestContextPath);               
            Assert.IsTrue(file.ParseResult.IsSuccess, file.GetMessage());
        }
        
        #region DataSource
        
        TestContextPath : string
        {
            get { TestContext.GetRuntimeDataSourceObject.[string]() }
        }        
                    
        static allFiles : IEnumerable[string]
        {
            get { Directory.EnumerateFiles(@"..\..\..\rust\src\test\compile-fail", "*.rs", SearchOption.AllDirectories) }
        }
        
        #endregion
    }
}
