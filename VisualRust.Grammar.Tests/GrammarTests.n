        }
        
        private RunTest(action : Action[bool, string]) : void
        {
            def filename = TestContext.DataRow[0] :> string;
            when (filename.Any())
            {
                mutable exception = None();
                def maxStackSize = 32 * 1024 * 1024;
                def thread = Thread(() =>
                    try
                    {
                        def file = FsFile(filename, NitraRust.Instance);
                        action(file.ParseResult.IsSuccess, Uri(Path.GetFullPath(file.FilePath)).AbsoluteUri + "\n" + $<#..$(file.GetCompilerMessages();"\n")#>);
                    }
                    catch
                    {
                        e => exception = Some(e)
                    },
                    maxStackSize);
                
                thread.Start();
                thread.Join();
            
                exception.Iter(x => throw x);
            }
        }
